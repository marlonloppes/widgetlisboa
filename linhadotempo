<script>
const startDate = new Date("2025-12-19");
const endDate = new Date("2026-01-22");
const messageBox = document.getElementById("travel-message");

function updateTimeline() {
    const now = new Date();

    if (now < startDate) {
        document.getElementById("progress").style.width = "0%";
        return;
    }
    if (now > endDate) {
        document.getElementById("progress").style.width = "100%";
        return;
    }

    const total = endDate - startDate;
    const done = now - startDate;
    const percent = (done / total) * 100;

    document.getElementById("progress").style.width = percent + "%";

    // Mudan√ßa progressiva de cor
    const r = Math.floor(0 + (123 - 0) * (percent / 100));
    const g = Math.floor(212 + (47 - 212) * (percent / 100));
    const b = Math.floor(255 + (255 - 255) * (percent / 100));
    document.getElementById("progress").style.background = `rgb(${r}, ${g}, ${b})`;

    // Mensagens
    const today = now.toDateString();
    const afterTripDate = new Date("2026-01-23T08:00:00");

    if (today === startDate.toDateString()) {
        messageBox.textContent = "üòÑ Hora de viajar. Boas f√©rias!";
    } else if (today === endDate.toDateString()) {
        messageBox.textContent = "Hora de voltar para casa üòû";
    } else if (now >= afterTripDate) {
        messageBox.textContent = "F√©rias conclu√≠das, bora planejar a pr√≥xima ‚úàÔ∏è";
    } else {
        messageBox.textContent = "";
    } else if (today === endDate.toDateString()) {
        messageBox.textContent = "Hora de voltar para casa üòû";
    } else {
        messageBox.textContent = "";
    }
}

updateTimeline();
setInterval(updateTimeline, 60000);
</script>

